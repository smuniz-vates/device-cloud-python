# sudo requirements for device cloud
dc ALL=(ALL) NOPASSWD: /bin/chown, /bin/cp, /bin/grep, /bin/journalctl, /bin/ls, /bin/mkdir, /bin/mount, /bin/mv, /bin/rm, /bin/sh, /bin/systemctl, /bin/tar, /bin/umount, /sbin/shutdown, /usr/bin/iot-control, /usr/bin/rpm, /usr/bin/test, /usr/sbin/lvchange, /usr/sbin/lvcreate, /usr/sbin/lvdisplay, /usr/sbin/lvremove, /usr/sbin/lvs, /usr/sbin/lvscan, /usr/sbin/sadmin, /usr/bin/apt-get, /usr/bin/smart, /usr/sbin/watchdog, /usr/bin/pkill
